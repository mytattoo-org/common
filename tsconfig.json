{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es2018",
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@frontend/*": ["../frontend/src/*"],
      "@backend/*": ["../backend/src/*"]
    }
  },
  "references": [{ "path": "../backend" }]
}
