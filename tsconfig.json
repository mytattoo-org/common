{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es2018",
    "composite": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "paths": { "~types/*": ["types/*"] }
  }
}
